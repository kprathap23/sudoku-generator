<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center_vertical|center_horizontal">

        <RelativeLayout
            android:id="@+id/Q1_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/quadrant_border">

            <TextView
                android:id="@+id/Q0_0"
                style="@style/SudokuTextView"
                tools:text="0" />

            <TextView
                android:id="@+id/Q0_1"
                style="@style/SudokuTextView"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/Q0_0"
                android:layout_toRightOf="@+id/Q0_0"
                tools:text="0" />

            <TextView
                android:id="@+id/Q1_0"
                style="@style/SudokuTextView"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/Q0_0"
                tools:text="0" />

            <TextView
                android:id="@+id/Q1_1"
                style="@style/SudokuTextView"
                android:layout_below="@+id/Q0_0"
                android:layout_toEndOf="@+id/Q1_0"
                android:layout_toRightOf="@+id/Q1_0"
                tools:text="0" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/Q2_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Q1_layout"
            android:background="@drawable/quadrant_border">

            <TextView
                android:id="@+id/Q2_0"
                style="@style/SudokuTextView"
                tools:text="0" />

            <TextView
                android:id="@+id/Q2_1"
                style="@style/SudokuTextView"
                android:layout_toEndOf="@+id/Q2_0"
                android:layout_toRightOf="@+id/Q2_0"
                tools:text="0" />

            <TextView
                android:id="@+id/Q3_0"
                style="@style/SudokuTextView"
                android:layout_below="@+id/Q2_0"
                tools:text="0" />

            <TextView
                android:id="@+id/Q3_1"
                style="@style/SudokuTextView"
                android:layout_below="@+id/Q2_1"
                android:layout_toEndOf="@+id/Q3_0"
                android:layout_toRightOf="@+id/Q3_0"
                tools:text="0" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/Q3_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/Q1_layout"
            android:layout_toRightOf="@id/Q1_layout"
            android:background="@drawable/quadrant_border">

            <TextView
                android:id="@+id/Q0_2"
                android:layout_alignParentTop="true"
                style="@style/SudokuTextView"
                tools:text="0" />

            <TextView
                android:id="@+id/Q0_3"
                style="@style/SudokuTextView"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/Q0_2"
                android:layout_toRightOf="@+id/Q0_2"
                tools:text="0" />

            <TextView
                android:id="@+id/Q1_2"
                style="@style/SudokuTextView"
                android:layout_below="@id/Q0_2"
                tools:text="0" />

            <TextView
                android:id="@+id/Q1_3"
                style="@style/SudokuTextView"
                android:layout_below="@id/Q0_3"
                android:layout_toEndOf="@+id/Q1_2"
                android:layout_toRightOf="@+id/Q1_2"
                tools:text="0" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/Q4_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Q3_layout"
            android:layout_toEndOf="@id/Q1_layout"
            android:layout_toRightOf="@+id/Q2_layout"
            android:background="@drawable/quadrant_border">

            <TextView
                android:id="@+id/Q2_2"
                style="@style/SudokuTextView"
                tools:text="0" />

            <TextView
                android:id="@+id/Q2_3"
                style="@style/SudokuTextView"
                android:layout_toEndOf="@+id/Q2_2"
                android:layout_toRightOf="@+id/Q2_2"
                tools:text="0" />

            <TextView
                android:id="@+id/Q3_2"
                style="@style/SudokuTextView"
                android:layout_below="@id/Q2_2"
                tools:text="0" />

            <TextView
                android:id="@+id/Q3_3"
                style="@style/SudokuTextView"
                android:layout_below="@id/Q2_3"
                android:layout_toEndOf="@+id/Q3_2"
                android:layout_toRightOf="@+id/Q3_2"
                tools:text="0" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>